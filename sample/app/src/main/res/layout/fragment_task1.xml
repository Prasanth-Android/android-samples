<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.navya.task2.Task1"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:fillViewport="true" >
        <LinearLayout
            android:id="@+id/buttonslider"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <View
                    android:id="@+id/page1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#ffffff"
                    android:layout_marginLeft="2dp"></View>
                <View
                    android:id="@+id/page2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#ffffff"
                    android:layout_marginLeft="2dp"></View>
                <View
                    android:id="@+id/page3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#ffffff"
                    android:layout_marginLeft="2dp"></View>
                <View
                    android:id="@+id/page4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#ffffff"
                    android:layout_marginLeft="2dp"></View>
            </LinearLayout>
        </RelativeLayout>




    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000">
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left|top">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TextView1"
                android:id="@+id/textView1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView2"
                android:padding="5dp"
                android:layout_below="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:id="@+id/textView2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView3"
                android:padding="5dp"
                android:layout_below="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:id="@+id/textView3" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000">
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView3"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:id="@+id/button_display" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000">
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rel_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left|top"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/color1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/color1"
                android:id="@+id/color2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/color2"
                android:id="@+id/color3" />

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000">
    </LinearLayout>
        </LinearLayout>
</ScrollView>

</LinearLayout>

